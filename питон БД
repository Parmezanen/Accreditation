import openpyxl
from openpyxl import Workbook
from openpyxl import load_workbook
#Функция поиска и вывода строки из экселя
def search (x1):
    if (x1 < a) and (x1 > 0):
        x1 = x1 - 1
        z = a1[x1], a2[x1], a3[x1],a4[x1], a5[x1]
        return z
    else:
        return print('Такого нет!')

def sbor (x, y, z):
    for cellObj in sheet[ y : z]:
      for cell in cellObj:
          x.append(cell.value)
