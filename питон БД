            print(cell.value)
        print('--- Конец строки ---')

#Сбор данных по отдельным массивам
a1=[]
ba = 'A' + str(a)
sbor(a1, 'A2', ba)
a2=[]
ba = 'B' + str(a)
sbor(a2, 'B2', ba)
a3=[]
ba = 'C' + str(a)
sbor(a3, 'C2', ba)
a4=[]
ba = 'D' + str(a)
sbor(a4, 'D2', ba)
a5=[]
ba = 'E' + str(a)
sbor(a5, 'E2', ba)
